.wrap {
  background-color: #f8f8f8;
}
.wrap .clear {
  clear: both;
}
.wrap image {
  display: block;
  width: 100%;
  height: 100%;
}
.wrap .header .bannar {
  height: 385rpx;
}
.wrap .header .bannar navigator {
  display: block;
  height: 100%;
}
.wrap .shops {
  padding: 10rpx;
}
.wrap .shops .shop {
  position: relative;
  padding: 10rpx 10rpx 22rpx 10rpx;
  margin: 0 0 25rpx 0;
  background-color: white;
}
.wrap .shops .shop > .body {
  padding: 0 0 20rpx 0;
  font-size: 27rpx;
}
.wrap .shops .shop > .body .author .avatar {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 7rpx;
  overflow: hidden;
}
.wrap .shops .shop > .body .author .right .title {
  padding: 4rpx 0 0 0;
  color: #6795b5;
  font-size: 31rpx;
}
.wrap .shops .shop > .body .name {
  padding: 0 0 5rpx 0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.wrap .shops .shop > .body .post_imgs {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 10rpx 0 0 0;
}
.wrap .shops .shop > .body .post_imgs .post_imgs_box {
  width: 170rpx;
  height: 170rpx;
  border-radius: 4rpx;
  overflow: hidden;
}
.wrap .shops .shop .right {
  float: left;
  padding: 0 0 0 23rpx;
}
.wrap .shops .shop .right .tags {
  padding: 10rpx 0 0 0;
}
.wrap .shops .shop .right .tags .label {
  height: 38rpx;
  line-height: 38rpx;
}
.wrap .shops .shop .right .call_box {
  padding: 5rpx;
  width: 50rpx;
  hight: 50rpx;
  overflow: hidden;
}
.wrap .shops .shop > .name {
  padding: 10rpx 10rpx;
}
.wrap .shops .shop .star {
  padding: 0 10rpx;
}
.wrap .shops .shop .desc {
  padding: 0 10rpx;
}
.wrap .shops .shop > .bottom {
  padding: 0 11rpx;
  background-color: white;
}
.wrap .shops .shop > .bottom > .time {
  margin: 0 0 10rpx 0;
}
.wrap .shops .shop > .bottom > .time text {
  color: #666;
  font-size: 22rpx;
}
.wrap .shops .shop > .bottom > .address {
  position: absolute;
  right: 5rpx;
}
.wrap .shops .shop > .bottom > .address image {
  float: left;
  top: 11rpx;
  margin: 3rpx 7px 0 0;
  width: 25rpx;
}
.wrap .shops .shop > .bottom > .address > view {
  float: left;
  color: #0e6b82;
  font-size: 23rpx;
}
.wrap .shops .shop > .bottom > .others {
  position: relative;
  padding: 10rpx 0 8rpx 10rpx;
  background-color: #f8f8f8;
}
.wrap .shops .shop > .bottom > .others > .browse {
  position: relative;
  font-size: 20rpx;
}
.wrap .shops .shop > .bottom > .others > .browse > view {
  position: relative;
  display: block;
  float: left;
  font-size: 25rpx;
  top: -3rpx;
}
.wrap .shops .shop > .bottom > .others > .browse image {
  width: 27rpx;
  float: left;
}
.wrap .shops .shop > .bottom > .others > .browse > .num {
  color: #4395FF;
  top: 0rpx;
}
.wrap .shops .shop > .bottom > .others > .up {
  position: relative;
  font-size: 20rpx;
}
.wrap .shops .shop > .bottom > .others > .up > view {
  position: relative;
  display: block;
  float: left;
  font-size: 25rpx;
  top: -3rpx;
}
.wrap .shops .shop > .bottom > .others > .up image {
  float: left;
  margin: 0 0 0 13rpx;
  width: 25rpx;
}
.wrap .shops .shop > .bottom > .others > .up > .num {
  color: #4395FF;
  top: 0rpx;
}
.wrap .shops .shop > .bottom > .others > .in {
  position: absolute;
  right: 50rpx;
  top: 10rpx;
  font-size: 23rpx;
}
.wrap .shops .shop > .bottom > .others > .in navigator {
  color: #4395FF;
}
